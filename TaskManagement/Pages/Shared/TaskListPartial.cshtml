@model List<TaskManagement.Model.TaskMgnt>
@{
    var model = Model;
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Task Name</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Notes</th>
            <th scope="col">Task StartDate</th>
            <th scope="col">Task EndDate</th>
            <th scope="col">Task Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var task in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@task.TaskName</td>
                <td>@task.EmployeeId</td>
                <td>@task.Notes</td>
                <td>@task.TaskStartDate.ToString("yyyy-MMM-dd")</td>
                <td>@task.TaskEndDate.ToString("yyyy-MMM-dd")</td>
                <td>@task.TaskStatus</td>
            </tr>
        }
    </tbody>
</table>